<%= form_for @event do |f| %>
	<% if @event.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
    <ul>
		<% @event.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
    </ul>
	</div>
	<% end %>
	<p>
		<f.label for="event_name">EventName</label>
		<%= f.text_field(:name) %>
		<f.label for="event_numberofpeople">Number of People</label>
		<%= f.text_field(:numberofpeople) %>
	</p>
	
	<p>
		<f.label for="event_hen">When</label>
		<%= f.text_field(:when) %>
		<f.label for="event_where">Where</label>
		<%= f.text_field(:where) %>
	</p>
	
	<p>
		<f.label for="event_description">Description</label><br>
		<%= f.text_area(:description, size: "80x10")%>
	</p>
 
	<p>
		<%= f.submit %>
	</p>
<% end %>